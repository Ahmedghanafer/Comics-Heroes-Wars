<root>
  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    <include src="file://{resources}/styles/hud.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/hud.js" /> 
  </scripts>
  <Panel hittest="false" class="Root">
    <Panel hittest="false" id="Hud">
        <Button id="Soul" class="GemButton" onactivate="OnGemSelected('0')">
            <Image src="file://{images}/gauntlet/soul.psd" />
        </Button>
        <Button id="Mind" class="GemButton" onactivate="OnGemSelected('1')">
            <Image src="file://{images}/gauntlet/mind.psd" />
        </Button>
        <Button id="Space" class="GemButton" onactivate="OnGemSelected('2')">
            <Image src="file://{images}/gauntlet/space.psd" />
        </Button>
        <Button id="Reality" class="GemButton" onactivate="OnGemSelected('3')">
            <Image src="file://{images}/gauntlet/reality.psd" />
        </Button>
        <Button id="Time" class="GemButton" onactivate="OnGemSelected('4')">
            <Image src="file://{images}/gauntlet/time.psd" />
        </Button>
        <Button id="Power" class="GemButton" onactivate="OnGemSelected('5')">
            <Image src="file://{images}/gauntlet/power.psd" />
        </Button>
        <Button id="Snap" class="GemButton" onactivate="OnGemSelected('6')">
            <Image src="file://{images}/gauntlet/ability_gauntlet_snap.png" />
        </Button>
    </Panel>
  </Panel>
</root>
