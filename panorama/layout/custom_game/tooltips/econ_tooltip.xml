<root>
   <styles>
      <include src="s2r://panorama/styles/dotastyles.vcss_c" />
      <include src="s2r://panorama/styles/tooltips/econ_tooltip.css" />
   </styles>
   <scripts>
      <include src="file://{resources}/scripts/tooltips/econ_tooltip.js" />
   </scripts>
   <Panel class="EconItemContents" hittest="false" ontooltiploaded="OnTooltipLoad()">
      <Panel id="EconItemMain">
         <Panel id="EconTooltipHeader">
            <Panel id="HeaderTitle">
               <Label id="Name" text="#DOTA_tooltip_econ_item_name" />
               <Label id="Set" html="true" text="#DOTA_tooltip_econ_item_set" />
            </Panel>
            <Panel id="RarityStripe"/>
            <Panel id="Banner" >
               <Image class="SeasonalIcon"/>
               <Image id="HeroIcon"/>
               <Panel id="BannerText">
                  <Panel class="LeftRightFlow">
                     <Label text="#DOTA_tooltip_econ_item_rarity_label" />
                     <Label id="Rarity" html="true" class="ItemRarityColor" text="#DOTA_tooltip_econ_item_rarity" />
                  </Panel>
                  <Label id="Slot" html="true" text="#DOTA_tooltip_econ_item_slot" />
                  <Label id="HeroName" html="true" text="#DOTA_tooltip_econ_item_slot" />
               </Panel>
            </Panel>
         </Panel>
         <Label id="Description" html="true" text="#DOTA_tooltip_econ_item_description" />
      </Panel>
      <!-- End Econ Item Body -->
   </Panel>
</root>
